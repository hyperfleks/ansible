[common]
DEBUG: False
MEDIA_ROOT: /media/{{ app_name }}/
SITE_URL: https://{{ domain }}
BUSINESS_NAME: Cups Integrator

[secret]
SECRET_KEY: {{ secret_key }}

[database]
ENGINE: django.db.backends.mysql
HOST: {{ database_host }}
PORT: 3306
USER: {{ database_user }}
PASSWORD: {{ database_password }}
NAME: {{ app_name }}

[logging]
LOG_FILE: /var/log/{{ app_name }}/{{ app_name }}.log

[smtp]
HOST: {{ email_host }}
PORT: {{ email_port }}
SENDER_EMAIL: no-reply@{{ domain }}

[redis]
LOCATION: {{ redis_cache_url }}
LIFETIME: 86400
LIFETIME_404: 60

[celery]
BROKER_URL: {{ celery_broker_url }}
RESULT_BACKEND: {{ celery_broker_url }}

[internal]
URL: https://internal.tech-mail.ru
CLIENT: cups
TOKEN: {{ internal_token }}
